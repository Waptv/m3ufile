<body>
    <header>Ayna OTT</header>
    <div class="container" id="playlist">Loading channels...</div>

    <script>
        const m3uUrl = "https://raw.githubusercontent.com/abusaeeidx/Ayna-Playlists-free-Version/refs/heads/main/playlist.m3u";
        const baseUrl = "https://s111.twilightparadox.com/i.php?dtv="; 
        
        fetch(m3uUrl)
            .then(res => res.text())
            .then(data => {
                const lines = data.split('\n');
                const container = document.getElementById('playlist');
                container.innerHTML = "";

                for (let i = 0; i < lines.length; i++) {
                    if (lines[i].startsWith('#EXTINF')) {
                        const infoLine = lines[i];
                        const streamUrl = lines[i + 1];

                        const nameMatch = infoLine.match(/tvg-name="(.*?)"/);
                        const logoMatch = infoLine.match(/tvg-logo="(.*?)"/);
                        const groupMatch = infoLine.match(/group-title="(.*?)"/);

                        const name = nameMatch ? nameMatch[1] : "Unknown";
                        const logo = logoMatch ? logoMatch[1] : "";
                        const group = groupMatch ? groupMatch[1] : "Other";

                        const div = document.createElement("div");
                        div.className = "channel";
                        div.innerHTML = `
                            <img src="${logo}" alt="${name}">
                            <div class="channel-info">
                                <h3>${name}</h3>
                                <p>Group: ${group}</p>
                                <a href="${baseUrl + encodeURIComponent(streamUrl)}" target="_blank">▶ Play</a>
                            </div>
                        `;
                        container.appendChild(div);
                    }
                }
            })
            .catch(err => {
                document.getElementById('playlist').innerText = "❌ Failed to load playlist.";
                console.error(err);
            });
    </script>
</body>

</html>
