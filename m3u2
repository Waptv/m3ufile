    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #111;
            color: #eee;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #0d47a1;
            padding: 15px;
            text-align: center;
            color: #fff;
            font-size: 24px;
            font-weight: bold;
        }

        .container {
            padding: 20px;
        }

        .channel {
            display: flex;
            flex-direction: row;
            align-items: center;
            background-color: #1e1e1e;
            border-radius: 8px;
            padding: 10px;
            margin-bottom: 15px;
            flex-wrap: wrap;
        }

        .channel img {
            width: 100px;
            height: auto;
            margin-right: 15px;
            border-radius: 4px;
        }

        .channel-info {
            flex: 1;
            min-width: 200px;
        }

        .channel-info h3 {
            margin: 0;
            font-size: 20px;
            color: #00e5ff;
        }

        .channel-info p {
            margin: 5px 0;
            color: #bbb;
        }

        .channel-info a {
            display: inline-block;
            margin-top: 8px;
            padding: 6px 12px;
            background-color: #00c853;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            font-size: 14px;
        }

        @media screen and (max-width: 600px) {
            .channel {
                flex-direction: column;
