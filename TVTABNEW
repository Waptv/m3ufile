    // DOM Elements
    const playerElement = document.getElementById('player');
    const mainPlayerSection = document.getElementById('main-player-section');
    const spinnerElement = document.getElementById('spinner');
    const viewerCountElement = document.getElementById('viewer-count');
    const channelGridElement = document.getElementById('channel-grid');
    const noticeMarqueeElement = document.getElementById('notice-marquee');
    const donateBtnElement = document.getElementById('donate-btn');
    const popupOverlayElement = document.getElementById('popup-overlay');
    const popupContainerElement = document.getElementById('popup-container');
    const copyNumberBtnElement = document.getElementById('copy-number-btn');
    const closePopupBtnElement = document.getElementById('close-popup-btn');
    const donateNumberElement = document.getElementById('donate-number');
    const categoryItems = document.querySelectorAll('.category-item');
    
    // Variables
    let jwPlayer;
    let currentChannelIndex = 0;
    let currentCategory = 'sports';
    let showNotice = true;
    let scrollCount = 0;
    let donateNumber = "01700961808";
    let viewerCount = 0;
    
    // Initialize Firebase
    function initializeFirebase() {
      try {
        const firebaseConfig = {
          apiKey: "AIzaSyDhlJKHnQZsXa4Sc9-qc6mfDjNFRf8Xzww",
          authDomain: "withrid-88a98.firebaseapp.com",
          databaseURL: "https://withrid-88a98-default-rtdb.asia-southeast1.firebasedatabase.app",
          projectId: "withrid-88a98",
          storageBucket: "withrid-88a98.firebasestorage.app",
          messagingSenderId: "517654343662",
          appId: "1:517654343662:web:5e2f40cc19625860f968ff",
        };
        
        const app = firebase.initializeApp(firebaseConfig);
        const database = firebase.database();
        const viewersRef = database.ref('viewers');
        
        // Add viewer to count with a unique ID based on timestamp
        const uniqueId = Date.now().toString();
        const userRef = database.ref(`viewers/${uniqueId}`);
        
        // Set the value to true
        userRef.set(true);
        
        // Remove viewer when disconnected
        userRef.onDisconnect().remove();
        
        // Listen for viewer count changes
        viewersRef.on('value', (snapshot) => {
          if (snapshot.exists()) {
            viewerCount = Object.keys(snapshot.val()).length;
            viewerCountElement.textContent = viewerCount;
          } else {
            viewerCount = 1; // At least one viewer (current user)
            viewerCountElement.textContent = viewerCount;
          }
        });
      } catch (error) {
        console.error("Firebase error:", error);
        // Fallback to a random number between 45-120 if Firebase fails
        viewerCount = Math.floor(Math.random() * (120 - 45 + 1)) + 45;
        viewerCountElement.textContent = viewerCount;
      }
    }
    
    // Initialize JW Player
    function initializeJWPlayer() {
      if (window.jwplayer && playerElement) {
        jwPlayer = window.jwplayer(playerElement);
        jwPlayer.setup({
          file: channelsByCategory[currentCategory][0].stream,
          playbackRateControls: [0.75, 1, 1.25, 1.5],
          title: "Live TV",
          width: "100%",
          aspectratio: "16:9",
          mute: false,
          repeat: true,
          autostart: true,
          primary: "html5",
          type: "m3u8",
          controls: true,
          responsive: true,
          skin: { name: "glow", active: "red" },
        });
        
        // Hide spinner after player loads
        setTimeout(() => {
          spinnerElement.classList.add('hidden');
        }, 2000);
      }
    }
    
    // Render channel grid with staggered animation
    function renderChannelGrid() {
      // Clear existing content
      channelGridElement.innerHTML = '';
      
      // Get channels for current category
      const channels = channelsByCategory[currentCategory];
      
      // Create and append channel items with immediate visibility
      channels.forEach((channel, index) => {
        const gradientClass = `${currentCategory}-gradient-${(index % 4) + 1}`;
        const isActive = index === currentChannelIndex ? 'active' : '';
        
        const channelItem = document.createElement('div');
        channelItem.className = `channel-item ${gradientClass} ${isActive}`;
        channelItem.style.opacity = '1'; // Ensure immediate visibility
        
        // Channel item without LIVE badge
        channelItem.innerHTML = `
          <img src="${channel.logo || '/placeholder.svg'}" alt="${channel.name}">
          <p>${channel.name}</p>
        `;
        
        channelItem.addEventListener('click', () => {
          loadStream(channel.stream, index);
        });
        
        channelGridElement.appendChild(channelItem);
      });
    }

    // Update the switchCategory function to show channels immediately without hiding them first
    function switchCategory(category) {
      if (category === currentCategory) return;
  
      // Update current category immediately without hiding channels
      currentCategory = category;
      currentChannelIndex = 0;
  
      // Update active category with visual feedback
      categoryItems.forEach(item => {
        if (item.dataset.category === category) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });
  
      // Render new channel grid immediately without exit animation
      renderChannelGrid();
  
      // Load first channel of new category
      const firstChannel = channelsByCategory[category][0];
      loadStream(firstChannel.stream, 0);
    }

    // Update the loadStream function for more elegant transitions
    function loadStream(streamURL, index) {
      spinnerElement.classList.remove('hidden');
      currentChannelIndex = index;
      
      // Update active channel in grid with elegant animation
      document.querySelectorAll('.channel-item').forEach((item, idx) => {
        if (idx === index) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });
      
      // Show notice when new channel is loaded
      showNotice = true;
      scrollCount = 0;
      
      // Load stream in the player
      jwPlayer.load([{ file: streamURL }]);
      jwPlayer.play();
      
      setTimeout(() => {
        spinnerElement.classList.add('hidden');
      }, 2000);
    }
    
    // Handle marquee iterations
    function handleMarqueeIteration() {
      if (showNotice) {
        scrollCount += 1;
        
        // Hide notice after 3 iterations
        if (scrollCount >= 3) {
          showNotice = false;
        }
      }
    }
    
    // Show donate popup
    function showDonatePopup() {
      popupOverlayElement.style.display = 'block';
      popupContainerElement.style.display = 'block';
    }
    
    // Hide donate popup
    function hideDonatePopup() {
      popupOverlayElement.style.display = 'none';
      popupContainerElement.style.display = 'none';
    }
    
    // Copy donate number
    function copyDonateNumber() {
      navigator.clipboard.writeText(donateNumber).then(() => {
        alert("Number copied: " + donateNumber);
      });
    }
    
    // Event listeners
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize Firebase
      initializeFirebase();
      
      // Initialize JW Player
      initializeJWPlayer();
      
      // Render channel grid
      renderChannelGrid();
      
      // Category click event listeners
      categoryItems.forEach(item => {
        item.addEventListener('click', () => {
          switchCategory(item.dataset.category);
        });
      });
      
      // Marquee event listener
      if (noticeMarqueeElement) {
        noticeMarqueeElement.addEventListener('finish', handleMarqueeIteration);
      }
      
      // Donate button event listener
      donateBtnElement.addEventListener('click', showDonatePopup);
      
      // Popup overlay event listener
      popupOverlayElement.addEventListener('click', hideDonatePopup);
      
      // Close popup button event listener
      closePopupBtnElement.addEventListener('click', hideDonatePopup);
      
      // Copy number button event listener
      copyNumberBtnElement.addEventListener('click', copyDonateNumber);
    });
  </script>
</body>
</html>


